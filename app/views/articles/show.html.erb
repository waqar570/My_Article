<h1><%= @article.title %></h1>

<p>
  <%= @article.author_email %>
</p>
  

<p>
  <%= image_tag url_for(@article.image) if @article.image.attached? %> 
</p>
<ul>
  <li><%= link_to "Edit", edit_article_path(@article) %></li>
  <li><%= link_to "Destroy", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>
